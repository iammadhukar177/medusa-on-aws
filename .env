# Server
PORT=9000
NODE_ENV=production

# Database (PostgreSQL recommended for production)
DATABASE_TYPE=postgres
DATABASE_URL=postgres://medusa_user:medusa_pass@your-db-host:5432/medusa_db

# Redis (Optional but recommended for caching and queues)
REDIS_URL=redis://your-redis-host:6379

# CORS
ADMIN_CORS=http://localhost:7000
STORE_CORS=http://localhost:8000

# JWT
JWT_SECRET=supersecretkey
COOKIE_SECRET=supercookiesecret

# Stripe or other payment plugin (if used)
# STRIPE_API_KEY=your-stripe-api-key
# STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Admin credentials (for first-time login if no DB user exists)
MEDUSA_ADMIN_EMAIL=admin@yourdomain.com
MEDUSA_ADMIN_PASSWORD=supersecurepassword
